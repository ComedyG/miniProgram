/**index.wxss**/
@import "../template/MainCell/maincell.wxss";
.navcontainer{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  background-color: rgba(250, 12, 68, 1);
  margin-left: 0px;
  margin-right: 0px;
}
.top-tab-item{
  color: rgba(255, 255, 255, 0.6);
  font-size: 15px;
}
.top-tab-item.active{
  border-bottom:2px solid white;
  color: rgba(255, 255, 255, 0.6);
}
.scrollview{
  width: 100%;
  margin-top: 0rpx;
  
}
.loadingview{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  margin: 0rpx 0rpx;
  background-color: rgba(128, 128, 128, 0.158);
  
}

.loadingview text{
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.425);
}


.refresh-loading {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 0.5s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}